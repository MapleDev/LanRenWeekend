    <include layout="@layout/actionbar"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/set_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <ImageView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_setting_share_app"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/s1"
                android:text="分享给好友"
                android:textColor="@color/set_text_color"
                android:textSize="@dimen/set_text_size"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="45dp"
            android:background="@color/set_text_color"/>

        <RelativeLayout

            android:id="@+id/set_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <ImageView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_trash"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/s2"
                android:text="清除缓存"
                android:textColor="@color/set_text_color"
                android:textSize="@dimen/set_text_size"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="45dp"
            android:background="@color/set_text_color"/>

        <RelativeLayout
            android:id="@+id/set_evaluate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <ImageView
                android:id="@+id/s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_star"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/s3"
                android:text="请给我们一个评价"
                android:textColor="@color/set_text_color"
                android:textSize="@dimen/set_text_size"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="45dp"
            android:background="@color/set_text_color"/>

        <RelativeLayout
            android:id="@+id/set_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <ImageView
                android:id="@+id/s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_review"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/s4"
                android:text="用户反馈"
                android:textColor="@color/set_text_color"
                android:textSize="@dimen/set_text_size"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="45dp"
            android:background="@color/set_text_color"/>

        <RelativeLayout
            android:id="@+id/set_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <ImageView
                android:id="@+id/s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_update"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/s5"
                android:text="检查更新"
                android:textColor="@color/set_text_color"
                android:textSize="@dimen/set_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="当前版本: 以后不会更新了"
                android:textColor="@color/set_text_color"
                android:textSize="16dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="45dp"
            android:background="@color/set_text_color"/>

        <RelativeLayout
            android:id="@+id/set_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height">

            <ImageView
                android:id="@+id/s6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_tel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/s6"
                android:text="联系我们"
                android:textColor="@color/set_text_color"
                android:textSize="@dimen/set_text_size"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="10086"
                android:textColor="@color/set_text_color"
                android:textSize="16dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="45dp"
            android:background="@color/set_text_color"/>
    </LinearLayout
        >

</LinearLayout>